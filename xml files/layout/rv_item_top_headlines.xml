<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="3dp"
    app:cardBackgroundColor="@color/purple_200">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/idIVTopHeadlines"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idTVTopHeadlines"
            android:layout_below="@id/idIVTopHeadlines"
            android:textColor="@color/purple_500"
            android:text="News Heading"
            android:textStyle="bold"
            android:textSize="18dp"
            android:maxLines="3"
            android:padding="4dp"
            android:layout_margin="3dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idNewsText"
            android:maxLines="3"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:textColor="@color/purple_500"
            android:text="News text snippet"
            android:layout_below="@id/idTVTopHeadlines"
            />



            


    </RelativeLayout>
</androidx.cardview.widget.CardView>